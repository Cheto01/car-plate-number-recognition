# Environment Configuration for ALPR System
# Copy this file to .env and fill in your values

# Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alpr_db
POSTGRES_USER=alpr_user
POSTGRES_PASSWORD=your_postgres_password

MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=alpr_analytics
MONGODB_USER=alpr_user
MONGODB_PASSWORD=your_mongodb_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# MLflow
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=alpr-experiments

# API Keys (if needed for cloud services)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn

# Model Paths
VEHICLE_MODEL_PATH=data/models/yolov11n.pt
PLATE_MODEL_PATH=data/models/license_plate_detector.pt

# Processing
GPU_ENABLED=true
DEVICE=cuda
BATCH_SIZE=8
NUM_WORKERS=4
